{% extends 'base.html.twig' %}

{% block title %}Hello ProfilController!{% endblock %}

{% block body %}
<style>
    .example-wrapper { margin: 1em auto; max-width: 800px; width: 95%; font: 18px/1.5 sans-serif; }
    .example-wrapper code { background: #F5F5F5; padding: 2px 6px; }
</style>

<div class="example-wrapper">
    <h1>Profile</h1>
    <ul>
        <li>Perles : {{ profile.perle }}</li>
        <li>Bourses : {{ bourse }}</li>
        <li>Points : {{ profile.point }}</li>
    </ul>
    <h1>Mon coffre</h1>
    <ul>
        <li>Abonnement: {{ moncoffre.abonnement.name }}</li>
        <li>Date d'expiration : {{ moncoffre.expiredAt|date }}</li>
        <li>
            <h1>Liste abonnement : </h1>
            <ul>
                {% for ab in abonnement %}
                    <li>{{ ab.name}}({{ab.perle}}
                        perles/{{ab.price}}
                        euros)
                            <a class="btn bt-primary" href="/utulisateur/abonnement/payement/{{ab.id}}">Commander</a>
                        </li>
                {% endfor %}

            </ul>
        </li>
    </ul>
    <h1>Notifications</h1>
    <ul>
         {% for notif  in notification %}
            <li>{{ notif.title}} : ({{notif.message}}
            </li>
        {% endfor %}
    </ul>

</div>
{% endblock %}
