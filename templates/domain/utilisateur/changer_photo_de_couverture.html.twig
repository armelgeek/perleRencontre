<!-- Modal -->
<div class="modal fade"  id="covertureModal" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel" aria-hidden="true">
  <div class="modal-dialog  modal-dialog-centered" style="width: 800px" role="document">
    <div class="modal-content">
      <div class="modal-body">
 <ul class="nav nav-tabs" id="myTab" role="tablist">
  <li class="nav-item">
    <a class="nav-link active" id="home-tab" data-toggle="tab" href="#home" role="tab" aria-controls="home" aria-selected="true">Mes photos de couverture</a>
  </li>
  <li class="nav-item">
    <a class="nav-link" id="profile-tab" data-toggle="tab" href="#profile" role="tab" aria-controls="profile" aria-selected="false">Importer un photo</a>
  </li>
</ul>
<div class="tab-content mt-4" id="myTabContent">
  <div class="tab-pane fade show active" id="home" role="tabpanel" aria-labelledby="home-tab">
    <div class="row">
   {% for pdc in photoCouvertures %}
    <a href="{{path('utilisateur_profile')}}?pdc_id={{pdc.id}}" class="col-md-3 mr-2" style="position: relative;background-image: url('{{ vich_uploader_asset(pdc, 'imageFile') }}');height: 80px">
      {%if pdc.isActive==1 %} <i style="position: absolute;top:0; right: 5px;color: white">active</i>{%endif%} 
    </a>
    {% else %}
   {% endfor %}
    </div>
  </div>
  <div class="tab-pane fade" id="profile" role="tabpanel" aria-labelledby="profile-tab">
  {{ form_start(formChangerPhotoDeProfil) }}
  {{ form_row(formChangerPhotoDeProfil.imageFile) }}
  <input type="submit" value="Changer photo de couverture">
  {{ form_end(formChangerPhotoDeProfil) }}
  
</div>
      </div>
    </div>
  </div>
</div>
</div>