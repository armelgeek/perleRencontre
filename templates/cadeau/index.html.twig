{% extends 'base.html.twig' %}

{% block title %}Hello CadeauController!{% endblock %}

{% block body %}
<style>
    .example-wrapper { margin: 1em auto; max-width: 800px; width: 95%; font: 18px/1.5 sans-serif; }
    .example-wrapper code { background: #F5F5F5; padding: 2px 6px; }
</style>

<div class="example-wrapper">
    <h1>Commande des cadeau</h1>

    <ul>
       {% for cad in cadeau %}
            <li>{{ cad.name}}({{cad.perle}}
                perles/{{cad.price}}
                euros)
                    <a class="btn bt-primary" href="/utilisateur/cadeau/commander/{{cad.id}}">Commander</a>
                </li>
        {% endfor %}
    </ul>
</div>
{% endblock %}
